@model IList<Students.Web.Dtos.StudentDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>C1</th>
            <th>C1 credits</th>
            <th>C1 grade</th>
            <th>C1 disenrollment reason</th>
            <th>C2</th>
            <th>C2 grade</th>
            <th>C2 credits</th>
            <th>C2 disenrollment reason</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course1Credits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course1Grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course1DisenrollmentComment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course2Credits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course2Grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course2DisenrollmentComment)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
